{
  "manifest_version": 2,

  "name": "ChroFT",
  "description": "Chrome Forensics Tool",
  "version": "0.1",
  "icons": { 
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png" 
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ChroFT",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}